<%= link_to 'Back', pins_path %>

<div class="row">
	<div class="col-md-offset-2 col-md-8">	
	 <div class="panel panel-default">
	 <div class="panel-heading">
	  <p style="font-size:18pt; color:#000000; font-weight:bold; margin:0px;"><%= @pin.title %>

<% if user_signed_in? %>
<% unless current_user.favorites.exists?(id: @pin.id) %>
  <%= link_to favorite_pin_path(@pin, type: "favorite"), method: :put do %>
  <div style="font-size: 8pt; font-weight: bold; margin:5px 0 0 0; border-color: #000000; border-style: solid; width:140px; padding: 0 5px 0 5px; text-align:center;">FOLLOW THIS LIST</div>
  <% end %>
<% else %>
  <%= link_to favorite_pin_path(@pin, type: "unfavorite"), method: :put do %>
  <div style="font-size: 8pt; font-weight: bold; margin:5px 0 0 0; border-color: #000000; border-style: solid; width:140px; padding: 0 5px 0 5px; text-align:center;">FOLLOWING THIS LIST</div>
  <% end %>
<% end %> 
<% else %>

  <div style="font-size: 8pt; font-weight: bold; margin:5px 0 0 0; border-color: #000000; border-style: solid; width:200px; padding: 0 5px 0 5px; text-align:center;"><%= link_to "SIGN IN AND FOLLOW THIS LIST", new_user_session_path %></div>

<% end %> 

	  </p>
	 </div>
	 <div class="panel-body">
	  <p><%= @pin.description %></p>
	  updated at <%= time_ago_in_words(@pin.updated_at) %> ago</p> 
        <div class="profile showprofile">by <a href="/<%= @pin.user.name %>"><strong><%= @pin.user.name.truncate(15) if @pin.user %> </strong><%= image_tag(@pin.user.image.url(:thumb)) %></a></div>


	<% if user_signed_in? %>
	 <% if @pin.user == current_user %>
	  <%= link_to edit_pin_path(@pin) do %> 
	    <span class="glyphicon glyphicon-edit"></span>
        Edit
      <% end %>
      <%= link_to @pin, method: :delete, data: { confirm: 'Are you sure?' } do %>
        <span class="glyphicon glyphicon-trash"></span>
        Delete
      <% end %>
	 <% end %>
	<% end %>
	 </div>
 	</div>
 <div>

<%= render "comments/comment" %>
	
<% if user_signed_in? %>
	<% if @pin.user == current_user %>
	<h4>Add a place:</h4>
	<%= render "comments/form" %>
	<% end %>
<% end %>




