   <div id="tab1" class="tab active">
    <div id="pins" class="transitions-enabled">
    <% @user.favorites.each do |pin| %>
     <div class="list box panel panel-default">
      <%= link_to image_tag(pin.image.url(:croppable)), pin %>
        <div class="panel-body" style="height:140px;">
          <div class="profile listprofile"><%= image_tag(pin.user.image.url(:thumb)) %> 
            <p style="font-size:13pt; font-weight:bold; margin-bottom: 0px;"><%= pin.title.truncate(15) %> </p> by <a href="/<%= pin.user.name %>"><strong><%= pin.user.name.truncate(15) if pin.user %> </strong></a>
          <p style="height:60px;"><%= pin.description.truncate(33) %> </p>
            </div>
            </br>
       </div>
      </div>
    <% end %>
    </div>
   </div>